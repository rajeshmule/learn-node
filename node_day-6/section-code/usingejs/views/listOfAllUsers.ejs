<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head') -%>
</head>

<body>
    <%- include ('partials/header') -%>
    <div class="container">
        <h1 class="center-align">List Of All Users</h1>

        <% if(users.length == 0) { %>
        <h4 class="center-align">No users</h4>
        <p class="center-align">Please add user</p>
        <% } else { %>
        <% users.forEach(user => { %>
        <div class="row">
            <div class="col s12">
                <div class="card blue-grey darken-1 hoverable">
                    <a href=<%= "users/" + user.id %>>
                        <div class="card-content white-text">

                            <span class="card-title"><%= user.name %></span>

                        </div>
                        <div class="card-action">
                            <a href=<%= 'users/delete/' + user.id %>> remove user</a>


                            <a href=<%= 'users/update/' + user.id %>> update user</a>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <% }) %>
        <% } %>

    </div>
    <%- include ('partials/footer') -%>
</body>

</html>