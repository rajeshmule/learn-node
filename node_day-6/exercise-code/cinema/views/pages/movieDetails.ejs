<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/header %>
    <div class="container">
        <h3 class="center-align">Movie Details</h3>
        <div>
            <h4>
                <%= movie.title %>
            </h4>
            <p><%= movie.director %> </p>
            <h4><%= movie.reating %> </h4>

        </div>
        <div class="container">
            <form action="/comments" method="POST">
                <div class="row">
                    <div class="input-field col s9">
                        <i class="material-icons prefix">mode_edit</i>
                        <textarea id="textarea1" class="materialize-textarea" name="commentBody"></textarea>
                        <label for="textarea1">Add Your Comment</label>
                    </div>
                    <input name="movieId" value="<%= movie.id %>" type="hidden">
                    <div class="input-field col s3 center-align">
                        <button class="btn waves-effect waves-light" type="submit">comment
                            <i class="material-icons right">comment</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div>
            <h1>comments</h1>
            <%= movie.comments %>
        </div>

    </div>
    <div class="fixed-action-btn">
        <a class="btn-floating btn-large red">
            <i class="large material-icons">mode_edit</i>
        </a>
        <ul>
            <li><a href=<%= "delete/" + movie.id %> class="btn-floating red"><i
                        class="material-icons right">delete</i></a></li>
            <li><a href=<%= "update/" + movie.id %> class="btn-floating yellow darken-1"><i
                        class="material-icons right">edit</i></a></li>

        </ul>
    </div>
    <% include ../partials/footer %>
</body>

</html>